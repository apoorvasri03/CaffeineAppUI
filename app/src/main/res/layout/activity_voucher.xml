<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Voucher Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Voucher"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Promo Code Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Have a promo code? Enter here"
                android:background="@drawable/edittext_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Apply"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_rounded_bg"
                android:textColor="@android:color/white"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>
        </LinearLayout>

        <!-- Voucher Type Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_shopping_voucher"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Shopping Voucher"
                android:background="@drawable/tab_button_selected"
                android:textColor="#FF5722"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_delivery_voucher"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Delivery Voucher"
                android:background="@drawable/tab_button_normal"
                android:textColor="#808080"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- My Voucher Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Voucher"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <!-- Voucher Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/voucher_item_bg"
            android:layout_marginTop="8dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Special for You! Discount 25% max. IDR 25K"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Two-column layout for dates and amounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Left column - Valid Until -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid Until"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="27 Apr 2024"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Right column - Min Transaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Transaction"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="IDR 49.000"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/voucher_apply_button"
                android:textColor="#FF5722"/>
        </LinearLayout>

        <!-- Voucher Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/voucher_item_bg"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="#WeekendCeria Discount 50% max. IDR 15K"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Two-column layout for dates and amounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Left column - Valid Until -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid Until"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="27 Apr 2024"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Right column - Min Transaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Transaction"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="IDR 49.000"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/voucher_unapply_button"
                android:textColor="#808080"/>
        </LinearLayout>
        <!-- Voucher Item 3 (Pickup Only) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/voucher_item_bg"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="#WeekendCeria Discount 50% max. IDR 15K (Pickup Only)"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Two-column layout for dates and amounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Left column - Valid Until -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid Until"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="27 Apr 2024"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Right column - Min Transaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Transaction"
                        android:textColor="#9E9E9E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="IDR 49.000"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/voucher_unapply_button"
                android:textColor="#808080"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>